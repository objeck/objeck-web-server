{
	"network": {
		"instance": "RequestHandler",
		"port": 8081,
		"debug": true,
		"secure": {
			"cert_path": "keys/cert.crt",
			"cert_key_path": "keys/cert.key",
			"cert_passwd": "1234"
		}
	},
	"files": {
		"common": {
			"base_dir": "html"
		},
		"items": [
			{
				"groups": ".html",
				"alias": "index.html",
				"mime-type": "text/html",
				"location": "passwd.html",
				"cache": false
			},
			{
				"groups": ".html",
				"alias": "auth.html",
				"mime-type": "text/html",
				"location": "auth.html",
				"cache": false
			}
		]
	}
}